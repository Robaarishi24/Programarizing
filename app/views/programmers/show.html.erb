<body class="text-center">
<div class = "info">
  <h3><b><%= @programmer.first_name %>
      <%= @programmer.last_name %>
    </b></h3>
  <strong><p>Phone : <%= @programmer.phone %></p></strong>
  <strong><p>Email : <%= @programmer.email%></p></strong>
  <div class="button btn btn-primary">
    <%=link_to "Edit", edit_programmer_path(@programmer) , {:class => "link"}%>
    <svg class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
      xmlns="http://www.w3.org/2000/svg">
      <path
        d="M15.502 1.94a.5.5 0 010 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 01.707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 00-.121.196l-.805 2.414a.25.25 0 00.316.316l2.414-.805a.5.5 0 00.196-.12l6.813-6.814z" />
      <path fill-rule="evenodd"
        d="M1 13.5A1.5 1.5 0 002.5 15h11a1.5 1.5 0 001.5-1.5v-6a.5.5 0 00-1 0v6a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5v-11a.5.5 0 01.5-.5H9a.5.5 0 000-1H2.5A1.5 1.5 0 001 2.5v11z"
        clip-rule="evenodd" />
    </svg>
  </div>
  </div>
  <br><br>
  <div class="button btn btn-success">
    <%= link_to "New Project", new_project_path(:programmer_id => @programmer.id) , { :class => "link"}%>
    <svg class="bi bi-plus-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
      xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 3.5a.5.5 0 01.5.5v4a.5.5 0 01-.5.5H4a.5.5 0 010-1h3.5V4a.5.5 0 01.5-.5z"
        clip-rule="evenodd" />
      <path fill-rule="evenodd" d="M7.5 8a.5.5 0 01.5-.5h4a.5.5 0 010 1H8.5V12a.5.5 0 01-1 0V8z" clip-rule="evenodd" />
      <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm0 1A8 8 0 108 0a8 8 0 000 16z" clip-rule="evenodd" />
    </svg>
  </div>
  <br><br>
  <div class="album py-2 justify-content-lg-center d-flex">
    <div class="container justify-content-lg-center d-flex row row-cols-3">
      <% @projects.each do |project| %>
      <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
        <strong class="card-header"><%= project.name %></strong>
        <div class="card-body">
          <p class="card-text"><%= project.description%></p>
          <em><%= project.link %></em>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</body>