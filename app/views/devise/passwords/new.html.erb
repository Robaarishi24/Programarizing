<body class="text-center">
  <h3>Forgot your password?</h3>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <form class="new_programer">
    <div class="col-sm-3">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.email_field :email,{autofocus: true, autocomplete: "email" , :class => "form-control",:placeholder => "Email"}%>
      </div>
      <div class="actions">
        <%= f.submit "Send me reset password instructions"  , { :class => "button btn btn-dark" ,:style => "margin-top: 5%; color: white;"} %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>